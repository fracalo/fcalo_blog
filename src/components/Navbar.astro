---
import Menuicon from './Menuicon.astro'


const { VITE_SITE_PATH } = import.meta.env

---

<nav class='navbar flex align-center'>
    <div class='flex flex-col justify-center'>
        <a
            href={`/${VITE_SITE_PATH}`}
        >
            <h1 class='p-2 px-6 navbar-title'>Outskirt Dev</h1>
        </a>
    </div>
    <Menuicon />
</nav>

<style>
    .navbar {
        background: rgb(var(--background));
        height: 4rem;
        border-bottom: 1px solid #ddd;
    }
    .navbar-title {
        font-size: 2.2rem;
        font-weight: 700;
        white-space: nowrap;
    }
</style>
