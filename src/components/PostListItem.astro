---
type Props = {
    title: string; 
    summary: string;
    date: string;
    readingTime: string;
    isLast: boolean;
    url: URL
}
const { title, summary, date, readingTime, isLast, url } = Astro.props

let formattedDate = null
if (date) {
    const [_, month, day, year] = new Date(date).toDateString().split(' ')
    formattedDate = `${month} ${Number(day)}, ${year}`
}
---

<article>
    <a href={url}>
        <h2 class='post-title'>
            { title }
        </h2>
    </a>
    <div class='flex text-sm'>
        <p class='pr-2'>{formattedDate}</p>
        <p class='pr-2'>~</p>
        <p>{readingTime}</p>
    </div>
    <div class='text-lg font-semibold'> { summary } </div>
    {!isLast && <hr class='border-transparent mt-6 mb-4' />}
</article>

